<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mohit.tokas.basicstwo.ActivityOne">

    <!-- Button in Coordinate Layout
            line 6 sets the left constraint as the parent/coordinate layout
            line 7 sets the top constraint as the parent/coordinate layout  -->
    <Button
        android:id="@+id/start_activity_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_activity_btn_txt"
        android:layout_marginStart="97dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="231dp" />
</android.support.constraint.ConstraintLayout>
